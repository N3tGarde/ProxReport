[Unit]
Description=ProxReport
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/proxreport
ExecStart=/usr/bin/python3 -m proxreport serve --config /etc/proxreport/config.ini
Restart=on-failure
RestartSec=2

# If you want to bind to 80/443, you can grant the capability below.
# AmbientCapabilities=CAP_NET_BIND_SERVICE
# CapabilityBoundingSet=CAP_NET_BIND_SERVICE
# NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
